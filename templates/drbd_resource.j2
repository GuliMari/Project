resource storage {
    net {
        allow-two-primaries;
        after-sb-0pri discard-zero-changes;
        after-sb-1pri discard-secondary;
        after-sb-2pri disconnect;
    }
    startup { become-primary-on both; }

    on drbd1 {
        meta-disk internal;
        device /dev/drbd0;
        disk /dev/sdb;
        address 192.168.56.13:7788;
}
    on drbd2 {
        meta-disk internal;
        device /dev/drbd0;
        disk /dev/sdb;
        address 192.168.56.14:7788;
}
}
